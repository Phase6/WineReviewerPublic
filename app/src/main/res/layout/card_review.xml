<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/basic_card_elevation"
    android:layout_marginBottom="@dimen/margin_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/reviewCardLinearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_sm"
        android:orientation="vertical">

        <!--NAME AND RATING BAR ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWineName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_primary"/>

            <RatingBar
                android:id="@+id/reviewCardReviewBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                style="?android:attr/ratingBarStyleSmall"
                android:visibility="visible" />

        </LinearLayout>

        <!--VINEYARD AND VARIETAL ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWineVineyard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_primary"/>

            <TextView
                android:id="@+id/reviewCardWineVarietal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_primary"/>


        </LinearLayout>

        <!--ORIGIN AND VINTAGE ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWineOrigin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_primary"/>

            <TextView
                android:id="@+id/reviewCardWineVintage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_primary"/>


        </LinearLayout>

        <!--PRICE AND LABEL ROW -->
        <LinearLayout
            android:id="@+id/reviewCardLinearLayoutPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWinePriceLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/review_card_text_secondary"
                android:text="@string/label_price"/>

            <TextView
                android:id="@+id/reviewCardWinePrice"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_secondary"/>

        </LinearLayout>

        <!--PAIRING AND LABEL ROW -->
        <LinearLayout
            android:id="@+id/reviewCardLinearLayoutPairing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWinePairingLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/review_card_text_secondary"
                android:text="@string/label_pairing"/>

            <TextView
                android:id="@+id/reviewCardWinePairingText"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_secondary"/>

        </LinearLayout>

        <!--TASTE AND LABEL ROW -->
        <LinearLayout
            android:id="@+id/reviewCardLinearLayoutTaste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWineTasteLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/review_card_text_secondary"
                android:text="@string/label_taste"/>

            <TextView
                android:id="@+id/reviewCardWineTasteText"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_secondary"/>

        </LinearLayout>

        <!--SMELL AND LABEL ROW -->
        <LinearLayout
            android:id="@+id/reviewCardLinearLayoutSmell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWineSmellLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/review_card_text_secondary"
                android:text="@string/label_smell"/>

            <TextView
                android:id="@+id/reviewCardWineSmellText"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_secondary"/>

        </LinearLayout>

        <!--COLOR AND LABEL ROW -->
        <LinearLayout
            android:id="@+id/reviewCardLinearLayoutColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewCardWineColorLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/review_card_text_secondary"
                android:text="@string/label_color"/>

            <TextView
                android:id="@+id/reviewCardWineColorText"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/review_card_text_secondary"/>

        </LinearLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/reviewCardNumberOfBottlesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_md"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/review_card_text_secondary"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/reviewCardAddToCellarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="@null"
            android:textColor="@color/colorPrimary"
            android:text="@string/add_review_to_cellar_button"/>

    </LinearLayout>

</android.support.v7.widget.CardView>


